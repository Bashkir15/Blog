<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name='viewport' content="width=device-width, initial-scale=1">
		<link rel='stylesheet' href='./static/icons/ico/style.css'>
		<link rel='stylesheet' href='./styles/main.min.css'>

		<link href="https://fonts.googleapis.com/css?family=Lato:300,400i|Noto+Sans:400,700" rel="stylesheet">
	</head>

	<body>
		<div class="index-page-container">
			<% include ../../shared/index-page-left %>

			<div class='index-page-right'>
				<% include ../../shared/nav %>

				<div class='index-page-view-content'>
					<div class='latest-page-container'>
						<header>
							<h1>See all the Latest Posts</h1>
						</header>

						<div class='latest-posts-container'>
							<% posts.map((post) => { %>
								<div class='latest-single-post'>
									<div class='latest-single-post-header'>
										<div>
											<h3><%= post.title %></h3>
										</div>

										<div>
											<span>10/4/2016</span>
										</div>
									</div>

									<div class='latest-single-post-body'>
										<p>Need to include post preview some how? Post description?</p>
									</div>

									<div class='latest-single-post-footer'>
										<div>
											<div>
												<button>
													<span>Like</span>
												</button>

												<button>
													<span>Fave</span>
												</button>
											</div>
										</div>

										<div>
											<button>
												<span><%= post.sectionTitle %></span>
											</button>
										</div>
									</div>
								</div>
							<% }); %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
